#include <stdarg.h>
#include <unistd.h>
#include "main.h"
/*int _putchar(char c)
{
    return (write(1, &c, 1));
}*/

int _printf(const char *format, ...)
{
    int i = 0, count = 0;
    va_list args;
    va_start(args, format);
    while (format[i])
    {
        if (format[i] == '%')
        {
            i++;
            if (format[i] == '%')
            {
                count += _putchar('%');
            }
            else if (format[i] == 'c')
            {
                count += _putchar(va_arg(args, int));
            }
            else if (format[i] == 's')
            {
                const char *str = va_arg(args, const char *);
                if (str == NULL)
                {
                    str = "(null)";
                }
                while (*str)
                {
                    count += _putchar(*str++);
                }
            }
	    else if (format[i] == 'd')
	    {
		    count += _putchar(va_arg(args, int));
	    }
        }
        else
        {
            count += _putchar(format[i]);
        }
        /*format++;*/
	i++;
    }
    va_end(args);
    return count;
}

